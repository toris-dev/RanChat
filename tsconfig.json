{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@ranchat/shared": ["./packages/shared/src"],
      "@ranchat/shared/*": ["./packages/shared/src/*"]
    }
  },
  "include": [],
  "exclude": ["node_modules", "dist", ".next"],
  "references": [
    {
      "path": "./apps/web"
    },
    {
      "path": "./apps/admin"
    },
    {
      "path": "./packages/shared"
    }
  ]
}
